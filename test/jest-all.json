{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "..",
    "roots": [
        "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
        "node_modules/(?!(uuid|p-limit|yocto-queue)/)"
    ],
    "moduleDirectories": [
        "node_modules",
        "<rootDir>"
    ],
    "coverageProvider": "v8",
    "collectCoverageFrom": [
        "src/**/*.(t|j)s",
        "!src/main.ts",
        "!src/instrument.ts",
        "!src/**/*.module.ts",
        "!src/**/*.dto.ts",
        "!src/**/*.entity.ts",
        "!src/**/index.ts",
        "!src/**/*.config.ts",
        "!src/**/strategies/**",
        "!src/**/guards/**",
        "!src/**/interceptors/**",
        "!src/**/filters/**",
        "!src/**/decorators/**",
        "!src/common/telemetry/**",
        "!src/database/migrations/**",
        "!src/database/seeds/**",
        "!src/database/data-source.ts",
        "!src/database/seed.ts",
        "!src/**/*.middleware.ts"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
        "<rootDir>/test/jest-setup.ts"
    ],
    "testPathIgnorePatterns": [
        "<rootDir>/.worktrees/"
    ],
    "modulePathIgnorePatterns": [
        "<rootDir>/.worktrees/"
    ]
}
