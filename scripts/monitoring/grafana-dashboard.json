{
    "title": "Chapters Studio ERP - Application Metrics",
    "uid": "chapters-erp-main",
    "tags": [
        "nodejs",
        "nestjs",
        "erp"
    ],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
        {
            "id": 1,
            "title": "Requests per Second",
            "type": "graph",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "rate(http_request_duration_seconds_count[1m])",
                    "legendFormat": "RPS",
                    "refId": "A"
                }
            ],
            "yaxes": [
                {
                    "format": "ops"
                },
                {
                    "format": "short"
                }
            ]
        },
        {
            "id": 2,
            "title": "Average Response Time (95th percentile)",
            "type": "graph",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                    "legendFormat": "p95 Latency",
                    "refId": "A"
                }
            ],
            "yaxes": [
                {
                    "format": "s"
                },
                {
                    "format": "short"
                }
            ]
        },
        {
            "id": 3,
            "title": "Error Rate",
            "type": "graph",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "rate(http_request_duration_seconds_count{status_code=~\"5.*\"}[1m])",
                    "legendFormat": "5xx Errors",
                    "refId": "A",
                    "color": "#F2495C"
                }
            ],
            "yaxes": [
                {
                    "format": "ops"
                },
                {
                    "format": "short"
                }
            ]
        },
        {
            "id": 4,
            "title": "Node.js Event Loop Lag",
            "type": "graph",
            "gridPos": {
                "x": 12,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "nodejs_eventloop_lag_seconds",
                    "legendFormat": "Lag",
                    "refId": "A"
                }
            ],
            "yaxes": [
                {
                    "format": "s"
                },
                {
                    "format": "short"
                }
            ]
        }
    ]
}